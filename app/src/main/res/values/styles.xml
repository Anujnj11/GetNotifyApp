<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/startblue</item>
        <item name="colorPrimaryDark">@color/endblue</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:colorBackground">@color/cloud</item>-->
    </style>



    <style name="LoginPage" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/startblue</item>
        <item name="colorPrimaryDark">@color/endblue</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/cloud</item>
        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:windowBackground">@color/cloud</item>

        <!--<item name="colorControlNormal">@color/iron</item>-->
        <!--<item name="colorControlActivated">@color/monsoon</item>-->
        <!--<item name="colorControlHighlight">@color/monsoon</item>-->
        <!--<item name="android:textColorHint">@color/iron</item>-->

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">@color/primary</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
</resources>
